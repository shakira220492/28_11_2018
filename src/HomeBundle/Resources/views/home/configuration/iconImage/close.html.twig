</div>

<script>
    var zeroDivIconButton = document.getElementById("zeroDivIconButton");
    zeroDivIconButton.addEventListener("click", showConfigurationArea, false);
    
    function zeroDivArea()
    {
        if (size === "2")
        {
            var presentationArea = document.getElementById("presentationArea");
            presentationArea.style.transitionProperty = "all";
