        displaceIcon.style.transitionProperty = "all";
        displaceIcon.style.transitionDuration = "0.4s";
        displaceIcon.style.right = 600 + "px";
        
    }
    
    function twoDivArea()
    {
        if (size === "2")
        {
            var presentationArea = document.getElementById("presentationArea");
            presentationArea.style.transitionProperty = "all";
            presentationArea.style.transitionDuration = "0.4s";
            presentationArea.style.width = $(window).width() - 880 + "px";
        }
        
        var configurationArea = document.getElementById("configurationArea");
        configurationArea.style.transitionProperty = "all";
        configurationArea.style.transitionDuration = "0.4s";
        configurationArea.style.width = 700 + "px";
        
        var videoInformation = document.getElementById("videoInformation");
        videoInformation.style.transitionProperty = "all";
        videoInformation.style.transitionDuration = "0.4s";
        videoInformation.style.width = 700 + "px";
        
        var configurationBar = document.getElementById("configurationBar");
        configurationBar.style.transitionProperty = "all";
        configurationBar.style.transitionDuration = "0.4s";
        configurationBar.style.right = 880 + "px";
        
        var displaceIcon = document.getElementById("displaceIcon");
        displaceIcon.style.transitionProperty = "all";
        displaceIcon.style.transitionDuration = "0.4s";
        displaceIcon.style.right = 880 + "px";
        
    }
    
    function showConfigurationArea()
    {
        if (ConfigurationAreaSize === "1")
        {
            zeroDivArea();
            
            ConfigurationAreaSize = "2";
        } else if (ConfigurationAreaSize === "2")
        {
            oneDivArea();
            
            ConfigurationAreaSize = "3";
        } else if (ConfigurationAreaSize === "3")
        {
            twoDivArea();
            
            ConfigurationAreaSize = "4";
        } else if (ConfigurationAreaSize === "4")
        {
            oneDivArea();
            
            ConfigurationAreaSize = "1";
        }
    }
    
</script>